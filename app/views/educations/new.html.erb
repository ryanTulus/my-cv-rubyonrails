<h1 class="text-center">New Education</h1>

<% if @edu.errors.any? %>
    <% @edu.errors.full_messages.each do |msg| %>
        <div class="text-danger text-center"><strong><%= msg %></strong></div>
    <% end %>
<% end %>
<br/>
<div class="col-md-12">
<%= form_for @edu, html:{class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <div class="col-md-2 control-label"><label>School Name</label></div>
      <div class="col-md-10"><%= f.text_field :school_name, class: 'form-control', placeholder: 'Name' %></div>
    </div>
    <div class="form-group">
      <div class="col-md-2 control-label"><label>School Address</label></div>
      <div class="col-md-10"><%= f.text_field :school_address, class: 'form-control', placeholder: 'Address' %></div>
    </div>
    <br/>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10"><%= f.submit "Submit", class: 'btn btn-success' %></div>
    </div>
<% end %>
</div>


