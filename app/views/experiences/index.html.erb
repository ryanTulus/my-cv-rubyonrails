
<div class="col-md-12">

  <h1 class="text-center">Experiences</h1>

  <table class="table table-bordered table-hover table-responsive table-condensed">
    <thead>
    <tr>
      <td><strong>ID</strong></td>
      <td><strong>Company Name</strong></td>
      <td><strong>Job Title</strong></td>
      <td><strong>Start Date</strong></td>
      <td><strong>End Date</strong></td>
    </tr>
    </thead>
    <tbody>
    <% @exps.each do |e| %>
        <tr>
          <td><%= e.id %></td>
          <td><%= e.company_name %></td>
          <td><%= e.job_title %></td>
          <td><%= e.start_date %></td>
          <td><%= e.end_date %></td>
          <td><%= link_to "Modify", edit_experience_path(e), class: 'btn btn-info' %>&nbsp;<%= link_to "Delete", experience_path(e), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to "Add Experience", new_experience_path, class: 'btn btn-success' %>

</div>
