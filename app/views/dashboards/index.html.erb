<div class="col-md-12">

  <h1 class="text-center">Templates</h1>

  <table class="table table-bordered table-hover table-responsive table-condensed">
    <thead>
    <tr>
      <td><strong>ID</strong></td>
      <td><strong>Template Name</strong></td>
      <td><strong>HTML file</strong></td>
      <td><strong>CSS file</strong></td>
    </tr>
    </thead>
    <tbody>
    <% @templates.each do |t| %>
        <tr>
          <td><%= t.id %></td>
          <td><%= t.template_name %></td>
          <td><%= t.html_template %></td>
          <td><%= t.css_template %></td>
          <td><%= link_to "Modify", edit_template_path(t), class: 'btn btn-info' %>&nbsp;<%= link_to "Delete", template_path(t), method: :delete, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'Add New Template', new_template_path, class: 'btn btn-success'%>

</div>

